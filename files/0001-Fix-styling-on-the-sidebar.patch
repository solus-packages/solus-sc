From 1329f12ee4e85b075d80bb35051b81b682259243 Mon Sep 17 00:00:00 2001
From: Ikey Doherty <ikey@solus-project.com>
Date: Mon, 8 Aug 2016 00:08:30 +0100
Subject: [PATCH 1/2] Fix styling on the sidebar

Signed-off-by: Ikey Doherty <ikey@solus-project.com>
---
 solus_sc/arc.css     | 8 ++++----
 solus_sc/styling.css | 6 +++---
 2 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/solus_sc/arc.css b/solus_sc/arc.css
index a388a06..6dcac2f 100644
--- a/solus_sc/arc.css
+++ b/solus_sc/arc.css
@@ -21,19 +21,19 @@
     background-color: @sidebar_bg;
 }
 
-.solus-sc .main-sidebar .list-row:not(:selected) {
+.solus-sc list.main-sidebar row:not(:selected) {
     color: @sidebar_fg;
 }
 
-.solus-sc .main-sidebar .list-row:not(:selected) GtkImage {
+.solus-sc list.main-sidebar row:not(:selected) GtkImage {
     color: alpha(@sidebar_fg, 0.7);
 }
 
-.solus-sc .main-sidebar .list-row:hover:not(:selected) {
+.solus-sc list.main-sidebar row:hover:not(:selected) {
     background-color: alpha(@sidebar_fg, 0.15);
 }
 
-.sc-changelog .list-row {
+list.sc-changelog  row {
     background-color: @theme_base_color;
     border-radius: 2px;
 }
diff --git a/solus_sc/styling.css b/solus_sc/styling.css
index fe7626c..b9dedb0 100644
--- a/solus_sc/styling.css
+++ b/solus_sc/styling.css
@@ -7,7 +7,7 @@
     padding: 4px;
 }
 
-.solus-sc .main-sidebar .list-row {
+.solus-sc list.main-sidebar row {
     padding: 8px 0;
 }
 
@@ -15,7 +15,7 @@
     background: none;
 }
 
-.sc-changelog .list-row {
+list.sc-changelog row {
     padding: 5px;
     border: 1px solid @borders;
 }
@@ -34,5 +34,5 @@
 }
 
 .group-button:hover {
-    -gtk-image-effect: none;
+    -gtk-icon-effect: none;
 }
